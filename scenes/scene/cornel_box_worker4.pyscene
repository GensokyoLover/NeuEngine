# Create geometry
# flags = TriangleMeshImportFlags.GenSmoothNormals | TriangleMeshImportFlags.JoinIdenticalVertices
# bunnyMesh = TriangleMesh.createFromFile('../test_scenes/meshes/bunny_centered.obj', flags)

# Make a quad mesh with 5 vertices (one in the center).
# This is useful for creating a light source.
quadMesh = TriangleMesh()


normal = float3(0, 1, 0) 
quadMesh.addVertex(float3(0, 0, 0), normal, float2(0.7071, 0.7071)) 
quadMesh.addVertex(float3(0.7071, 0, 0.7071), normal, float2(0, 0)) 
quadMesh.addVertex(float3(0.7071, 0, -0.7071), normal, float2(0, 1)) 
quadMesh.addVertex(float3(-0.7071, 0, -0.7071), normal, float2(1, 1)) 
quadMesh.addVertex(float3(-0.7071, 0, 0.7071), normal, float2(1, 0))

quadMesh.addTriangle(0, 1, 2)
quadMesh.addTriangle(0, 2, 3)
quadMesh.addTriangle(0, 3, 4)
quadMesh.addTriangle(0, 4, 1)

sceneBuilder.addMeshInstance(
    sceneBuilder.addNode('floor', Transform(scaling=float3(1, 1.0, 1),translation=float3(0, -0.7071, 0))),
    sceneBuilder.addTriangleMesh(quadMesh, floor,True)
)

sceneBuilder.addMeshInstance(
    sceneBuilder.addNode('ceil', Transform(scaling=float3(1, 1.0, 1), translation=float3(0, 0.7071, 0), rotationEulerDeg=float3(180, 0, 0))),
    sceneBuilder.addTriangleMesh(quadMesh, ceil,True)
)

sceneBuilder.addMeshInstance(
    sceneBuilder.addNode('back', Transform(scaling=float3(1, 1.0, 1), translation=float3(0, 0.0, -0.7071), rotationEulerDeg=float3(90, 0, 0))),
    sceneBuilder.addTriangleMesh(quadMesh, back,True)
)

sceneBuilder.addMeshInstance(
    sceneBuilder.addNode('left', Transform(scaling=float3(1.0, 1.0, 1.0), translation=float3(-0.7071, 0.0, 0), rotationEulerDeg=float3(0, 0, -90))),
    sceneBuilder.addTriangleMesh(quadMesh, left,True)
)

sceneBuilder.addMeshInstance(
    sceneBuilder.addNode('right', Transform(scaling=float3(1, 1.0,1), translation=float3(0.7071, 0.0, 0), rotationEulerDeg=float3(0, 0, 90))),
    sceneBuilder.addTriangleMesh(quadMesh, right,True)
)

