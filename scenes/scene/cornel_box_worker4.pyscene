floor.baseColor = float4(0.802, 0.802, 0.802, 1.0)
floor.metallic = 1
floor.roughness = 0.9


ceil = StandardMaterial('ceil')
ceil.baseColor = float4(0.801, 0.801, 0.801, 1.0)
ceil.metallic = 1
ceil.roughness = 0.9

back = StandardMaterial('back')
back.baseColor = float4(0.8, 0.8, 0.8, 1.0)
back.metallic = 1
back.roughness = 0.9

left = StandardMaterial('left')
left.baseColor = float4(0, 1, 0, 1.0)
left.metallic = 1
left.roughness = 0.1

right = StandardMaterial('right')
right.baseColor = float4(1, 0.0, 0.0, 1.0)
